{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    // Disable mypy because it doesn't work with PyQt6
    "python.linting.mypyEnabled": true,

    // Because Black keeps irritating by this error:
    // 'Black does not support the "Format Selection" command'
    // Solution: https://code.visualstudio.com/docs/python/editing#_troubleshooting
    "[python]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSaveMode": "file"
    }
}
